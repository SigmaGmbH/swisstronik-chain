    name = "types_go_proto",
    compilers = ["@io_bazel_rules_go//proto:go_grpc"],
    importpath = "github.com/evmos/ethermint/x/evm/types",
    proto = ":types_proto",
    visibility = ["//visibility:public"],
    deps = [
        "//cosmos/base/query/v1beta1:pagination_proto",
        "//cosmos/msg/v1:msg_proto",
        "//cosmos_proto",
