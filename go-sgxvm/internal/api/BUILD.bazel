    visibility = ["//go-sgxvm:__subpackages__"],
    deps = [
        "//go-sgxvm/go_protobuf_gen",
        "//go-sgxvm/types",
        "@com_github_ethereum_go_ethereum//common",
        "@com_github_ethereum_go_ethereum//core/types",
        "@org_golang_google_protobuf//proto",
