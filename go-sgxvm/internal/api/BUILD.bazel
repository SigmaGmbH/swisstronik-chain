            "-Wl,-rpath,go-sgxvm/internal/api -Lgo-sgxvm/internal/api/go-sgxvm/internal/api -lsgx_wrapper",
        ],
        "//conditions:default": [],
    }) + select({
        "@io_bazel_rules_go//go/platform:android_amd64": [
            "-Wl,-rpath,go-sgxvm/internal/api -Lgo-sgxvm/internal/api/go-sgxvm/internal/api -lsgx_wrapper.x86_64",
        ],
        "@io_bazel_rules_go//go/platform:android_arm64": [
